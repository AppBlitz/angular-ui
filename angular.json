{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "library-angular-ui": {
      "projectType": "library",
      "root": "projects/library-angular-ui",
      "sourceRoot": "projects/library-angular-ui/src",
      "prefix": "lib",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:ng-packagr",
          "options": {
            "project": "projects/library-angular-ui/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "projects/library-angular-ui/tsconfig.lib.prod.json"
            },
            "development": {
              "tsConfig": "projects/library-angular-ui/tsconfig.lib.json"
            }
          },
          "defaultConfiguration": "production"
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "tsConfig": "projects/library-angular-ui/tsconfig.spec.json",
            "polyfills": [
              "zone.js",
              "zone.js/testing"
            ]
          }
        },
        "lint": {
          "builder": "@angular-eslint/builder:lint",
          "options": {
            "lintFilePatterns": [
              "projects/library-angular-ui/**/*.ts",
              "projects/library-angular-ui/**/*.html"
            ],
            "eslintConfig": "projects/library-angular-ui/eslint.config.js"
          }
        }
      }
    }
  },
  "cli": {
    "analytics": false,
    "schematicCollections": [
      "@angular-eslint/schematics"
    ]
  }
}
